    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug main file",
            "type": "debugpy",
            "request": "launch",
            "module": "main",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src"
        },
        {
            "name": "Debug extract_code_and_doc_string file",
            "type": "debugpy",
            "request": "launch",
            "module": "pocs.extract_code_and_doc_string",
            "args": [
                "${workspaceFolder}/../ydata-profiling/src/ydata_profiling/compare_reports.py"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}